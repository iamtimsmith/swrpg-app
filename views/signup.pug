extends layout

block content
	form(method=`post` action=`/signup`)
		div.form-group
			label.form-label(for=`name`) Name: 
			input.form-control(type=`text` name=`name` id=`name`)
		div.form-group
			label.form-label(for=`email`) Email: 
			input.form-control(type=`text` name=`email` id=`email`)
		div.form-group
			label.form-label(for=`password`) Password: 
			input.form-control(type=`password` name=`password` id=`password`)
		div.form-group
			label.form-label(for=`confirm`) Confirm Password: 
			input.form-control(type=`password` name=`confirm` id=`confirm`)

		button.btn.btn-primary.btn-lg Signup
		a.btn.btn-link(href=`/login`) Already have an account?
